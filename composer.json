{
    "name": "jhnbrnn/sloop",
    "description": "A tiny blog engine.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "John Brennan",
            "email": "john@jhnbrnn.com",
            "homepage": "http://jhnbrnn.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^4.10",
        "twig/twig": "3.*",
        "pimple/pimple": "~3.0",
        "illuminate/database": "8.*",
        "ircmaxell/password-compat": "v1.0.4",
        "monolog/monolog": "1.17.2",
        "slim/twig-view": "^3.3",
        "slim/psr7": "^1.5",
        "php-di/php-di": "^6.4",
        "slim/flash": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "Sloop\\": "src/Sloop"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}
